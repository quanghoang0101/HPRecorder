# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'HPRecorder' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for HPRecorder

  target 'HPRecorderTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'HPRecorderExample' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for HPRecorderExample
  pod 'HPRecorder', :path => '../HPRecorder'

  target 'HPRecorderExampleTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
